<section class="section" id="men">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="section-heading">
          <h2><%= title %></h2>
          <span
            ><%= description %></span
          >
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="men-item-carousel">
          <div class="owl-men-item owl-carousel">
            <% items.each do |item| %>
              <div class="item">
                <div class="thumb">
                  <div class="hover-content">
                    <ul>
                      <li>
                        <%= link_to try_on_path(product_id: item.id), target: :_blank do %>
                          <i class="fa fa-eye"></i>
                        <% end %>
                      </li>
                      <li>
                      <%= link_to root_path do %>
                        <i class="fa fa-star"></i>
                      <% end %>
                      </li>
                      <li>
                        <a href="single-product.html"
                          ><i class="fa fa-shopping-cart"></i
                        ></a>
                      </li>
                    </ul>
                  </div>
                  <%= image_tag 'banner1.jpg' %>
                </div>
                <div class="down-content">
                  <h4><%= item.title %></h4>
                  <span>$<%= item.price %></span>
                  <ul class="stars">
                    <li><i class="fa fa-star"></i></li>
                    <li><i class="fa fa-star"></i></li>
                    <li><i class="fa fa-star"></i></li>
                    <li><i class="fa fa-star"></i></li>
                    <li><i class="fa fa-star"></i></li>
                  </ul>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>